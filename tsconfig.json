{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "clients/*": ["clients/*"],
      "config/*": ["config/*"],
      "controllers/*": ["controllers/*"],
      "interfaces/*": ["interfaces/*"],
      "helpers/*": ["helpers/*"],
      "middlewares/*": ["middlewares/*"],
      "services/*": ["services/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}